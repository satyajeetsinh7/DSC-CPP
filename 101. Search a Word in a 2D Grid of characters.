class Solution {
  public:
    vector<vector<int>> searchWord(vector<vector<char>> grid, string word) {
        int n = grid.size(), m = grid[0].size();
        vector<vector<int>> ans;
        
        // 8 directions: R, L, D, U, DR, DL, UR, UL
        int dx[8] = {0, 0, 1, -1, 1, 1, -1, -1};
        int dy[8] = {1, -1, 0, 0, 1, -1, 1, -1};
        
        auto valid = [&](int x, int y) {
            return x >= 0 && y >= 0 && x < n && y < m;
        };
        
        for(int i = 0; i < n; i++) {
            for(int j = 0; j < m; j++) {
                if(grid[i][j] != word[0]) continue;
                
                bool found = false;
                for(int d = 0; d < 8 && !found; d++) {
                    int x = i, y = j, k = 0;
                    while(k < word.size() && valid(x, y) && grid[x][y] == word[k]) {
                        x += dx[d];
                        y += dy[d];
                        k++;
                    }
                    if(k == word.size()) {
                        ans.push_back({i, j}); // add once per cell
                        found = true;
                    }
                }
            }
        }
        return ans; // already lexicographically smallest by scan order
    }
};
