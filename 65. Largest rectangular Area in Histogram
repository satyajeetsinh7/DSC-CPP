class Solution {
  public:
    int getMaxArea(vector<int> &arr) {
        int n = arr.size();
        stack<int> st;
        long long ans = 0;
        
        for(int i = 0; i < n; i++) {
            while(!st.empty() && arr[st.top()] > arr[i]) {
                int h = arr[st.top()];
                st.pop();
                int w = st.empty() ? i : i - st.top() - 1;
                ans = max(ans, (long long)h * w);
            }
            st.push(i);
        }
        
        while(!st.empty()) {
            int h = arr[st.top()];
            st.pop();
            int w = st.empty() ? n : n - st.top() - 1;
            ans = max(ans, (long long)h * w);
        }
        
        return ans;
    }
};
