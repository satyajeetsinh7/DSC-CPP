class Solution {
    int maxSubarraySum(int[] arr) {
        int maxSum = arr[0];
        int currSum = 0;

        for (int num : arr) {
            currSum += num;

            if (currSum > maxSum) {
                maxSum = currSum;
            }

            if (currSum < 0) {
                currSum = 0;
            }
        }

        return maxSum;
    }
}
