class Solution {
  public:
    int orangesRot(vector<vector<int>>& mat) {
        int n = mat.size(), m = mat[0].size();
        queue<pair<int,int>> q;
        int fresh = 0, time = 0;

        // Initialize queue with all rotten oranges
        for(int i = 0; i < n; i++) {
            for(int j = 0; j < m; j++) {
                if(mat[i][j] == 2)
                    q.push({i, j});
                else if(mat[i][j] == 1)
                    fresh++;
            }
        }

        int dx[4] = {-1, 1, 0, 0};
        int dy[4] = {0, 0, -1, 1};

        // BFS
        while(!q.empty() && fresh > 0) {
            int sz = q.size();
            
            time++;

            while(sz--) {
                auto [x, y] = q.front();
                q.pop();

                for(int d = 0; d < 4; d++) {
                    int nx = x + dx[d];
                    int ny = y + dy[d];

                    if(nx >= 0 && ny >= 0 && nx < n && ny < m && mat[nx][ny] == 1) {
                        mat[nx][ny] = 2;
                        fresh--;
                        q.push({nx, ny});
                    }
                }
            }
        }

        return (fresh == 0) ? time : -1;
    }
};
