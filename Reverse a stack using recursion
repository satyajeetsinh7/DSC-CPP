class Solution {
  public:
    
    void insertAtBottom(stack<int> &st, int x) {
        if(st.empty()) {
            st.push(x);
            return;
        }
        int t = st.top();
        st.pop();
        insertAtBottom(st, x);
        st.push(t);
    }
    
    void reverseStack(stack<int> &st) {
        if(st.empty()) return;
        
        int x = st.top();
        st.pop();
        reverseStack(st);
        insertAtBottom(st, x);
    }
};
