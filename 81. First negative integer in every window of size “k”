class Solution {
  public:
    vector<int> firstNegInt(vector<int>& arr, int k) {
        deque<int> dq;
        vector<int> ans;
        
        for(int i = 0; i < arr.size(); i++) {
            // Add current element if negative
            if(arr[i] < 0)
                dq.push_back(i);
            
            // Remove elements out of this window
            if(!dq.empty() && dq.front() <= i - k)
                dq.pop_front();
            
            // Window formed
            if(i >= k - 1) {
                if(dq.empty())
                    ans.push_back(0);
                else
                    ans.push_back(arr[dq.front()]);
            }
        }
        return ans;
    }
};
