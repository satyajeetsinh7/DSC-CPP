class Solution {
  public:
    int maxProfit(vector<int> &prices) {
        int buy1 = INT_MAX, buy2 = INT_MAX;
        int sell1 = 0, sell2 = 0;

        for (int price : prices) {
            buy1 = min(buy1, price);               // Best price to buy 1st stock
            sell1 = max(sell1, price - buy1);      // Max profit after 1st sell

            buy2 = min(buy2, price - sell1);       // Effective price for 2nd buy
            sell2 = max(sell2, price - buy2);      // Max profit after 2nd sell
        }

        return sell2;
    }
};
