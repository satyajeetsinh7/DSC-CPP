class Solution {
  public:
    bool isBalanced(string& s) {
        std::stack<char> st;
        
        for (char ch : s) {
            // If opening bracket, push to stack
            if (ch == '(' || ch == '{' || ch == '[') {
                st.push(ch);
            } 
            else {
                // If closing bracket, stack must not be empty
                if (st.empty()) return false;
                
                char top = st.top();
                st.pop();
                
                // Check matching pair
                if (ch == ')' && top != '(') return false;
                if (ch == '}' && top != '{') return false;
                if (ch == ']' && top != '[') return false;
            }
        }
        
        // If stack is empty, all brackets matched properly
        return st.empty();
    }
};
