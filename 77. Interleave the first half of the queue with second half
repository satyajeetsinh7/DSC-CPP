class Solution {
  public:
    void rearrangeQueue(queue<int> &q) {
        int n = q.size();
        int half = n / 2;
        stack<int> st;
        
        // Step 1: push first half into stack
        for(int i = 0; i < half; i++) {
            st.push(q.front());
            q.pop();
        }
        
        // Step 2: enqueue stack elements back
        while(!st.empty()) {
            q.push(st.top());
            st.pop();
        }
        
        // Step 3: move first half to back
        for(int i = 0; i < half; i++) {
            q.push(q.front());
            q.pop();
        }
        
        // Step 4: again push first half into stack
        for(int i = 0; i < half; i++) {
            st.push(q.front());
            q.pop();
        }
        
        // Step 5: interleave both halves
        while(!st.empty()) {
            q.push(st.top());
            st.pop();
            q.push(q.front());
            q.pop();
        }
    }
};
