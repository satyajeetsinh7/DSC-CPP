class Solution {
  public:
    double findMedian(vector<int> &arr) {
        sort(arr.begin(), arr.end());
        int n = arr.size();
        
        if(n % 2 == 1) {
            // odd length → middle element
            return arr[n / 2];
        } 
        else {
            // even length → average of two middle
            double a = arr[n / 2 - 1];
            double b = arr[n / 2];
            return (a + b) / 2.0;
        }
    }
};
